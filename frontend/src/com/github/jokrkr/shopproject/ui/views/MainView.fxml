<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.jokrkr.shopproject.ui.controllers.MainController">
    <top>
        <HBox spacing="10">
            <HBox alignment="CENTER_LEFT">
                <Button prefHeight="40" prefWidth="100" text="Logout" onAction="#handleLogout"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER">
                <Button prefHeight="40" prefWidth="100" text="Manage" fx:id="manageButton" onAction="#showManage"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentPane"/>
    </center>
</BorderPane>