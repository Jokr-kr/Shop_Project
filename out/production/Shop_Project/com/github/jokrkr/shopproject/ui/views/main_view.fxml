<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.jokrkr.shopproject.ui.controllers.MainController">
    <!-- Top region with centered buttons -->
    <top>
        <HBox spacing="10" alignment="CENTER" >
            <Button prefHeight="40" prefWidth="100" text="Page 1" onAction="#showPage1"/>
            <Button prefHeight="40" prefWidth="100" text="Page 2" onAction="#showPage2"/>
            <Button prefHeight="40" prefWidth="100" text="Page 3" onAction="#showPage3"/>
            <Button prefHeight="40" prefWidth="100" text="Page 4" onAction="#showPage4"/>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentPane" />
    </center>
</BorderPane>
