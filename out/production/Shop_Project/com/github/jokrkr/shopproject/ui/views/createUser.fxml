<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.jokrkr.shopproject.ui.controllers.CreateUserController" alignment="CENTER" spacing="10" style="-fx-padding: 20;">
    <Label text="Create User" style="-fx-font-size: 24px;"/>
    <TextField fx:id="usernameField" promptText="Username" prefWidth="200"/>
    <PasswordField fx:id="passwordField" promptText="Password" prefWidth="200"/>
    <PasswordField fx:id="confirmField" promptText="Confirm Password" prefWidth="200"/>
    <Button text="Create" onAction="#createUser"/>
    <Label fx:id="responseLabel" text=" " style="-fx-text-fill: red;"/>
</VBox>